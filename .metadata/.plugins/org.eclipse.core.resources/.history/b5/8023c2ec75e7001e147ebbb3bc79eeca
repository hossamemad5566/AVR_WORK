#include "main.h"

#define UART_MODE   UART_MODE_RCV
/*this code for receive */
void setup (void)
{

    GIE_voidEnable();
    M_DIO_Void_SetPinDirection(PD0_PIN,INPUT);
	M_DIO_Void_SetPinDirection(PD1_PIN,OUTPUT);
    M_DIO_Void_SetPinDirection(PA6_PIN,OUTPUT);
    UART_Init();
    H_Lcd_Void_LCDInit();
    H_LED_Void_LedInit(LED_GRN);
    H_LED_Void_LedInit(LED_YEL);

}

int main(void)
{
	setup();

    while(1)
    {
        
    	UART_SendString("HEMO HOsB",9);
        _delay_ms(2000);
        //x = UART_ReceiveByteSync();
        //if(x=='a')
        //H_LED_Void_LedTog(LED_GRN);

        
        
    }
}

